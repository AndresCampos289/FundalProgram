<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Administrar Usuarios</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/usuarios.css" rel="stylesheet">
  <link href="/css/navbarStyles.css" rel="stylesheet">
  <link href="/css/navbarStyles.css" rel="stylesheet">
</head>
<body>
  <%- include('navbar') %>

  <div class="container mt-5 container-usuarios">
    <h2 class="mb-4">Administrar Usuarios</h2>

    <% if (success_msg) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <% if (error_msg) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <!-- Crear usuario -->
    <form class="row g-3 mb-4" action="/usuarios/crear" method="POST">
      <div class="col-md-3">
        <input type="text" name="username" class="form-control" placeholder="Nombre de usuario" required>
      </div>
      <div class="col-md-3">
        <input type="email" name="email" class="form-control" placeholder="Correo electr√≥nico" required>
      </div>

      <div class="col-md-3 position-relative">
        <input
          type="password"
          name="password"
          id="password"
          class="form-control"
          placeholder="Contrase√±a segura"
          required
          pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[A-Za-z\d@$!%*?&]{8,}$"
          title="Debe contener al menos una may√∫scula, una min√∫scula, un n√∫mero y m√≠nimo 8 caracteres.">
        <button type="button" id="toggleBtnCreate" class="btn btn-outline-secondary btn-sm position-absolute top-0 end-0 mt-1 me-1" onclick="togglePassword('password','toggleBtnCreate')">
          üëÅÔ∏è
        </button>
      </div>

      <div class="col-md-2">
        <select name="rol" class="form-select" required>
          <option value="">Seleccionar rol</option>
          <option value="Directivo">Directivo</option>
          <option value="Secretaria">Secretaria</option>
        </select>
      </div>

      <div class="col-md-1 d-grid">
        <button type="submit" class="btn btn-success">Crear</button>
      </div>
    </form>

    <!-- Tabla de usuarios -->
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Codigo</th>
          <th>Usuario</th>
          <th>Email</th>
          <th>Rol</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach(u => { %>
          <tr>
            <td><%= u.id %></td>
            <td><%= u.username %></td>
            <td><%= u.email %></td>
            <td><%= u.rol %></td>
            <td>
              <!-- Bot√≥n para abrir modal de edici√≥n -->
              <button
                type="button"
                class="btn btn-sm btn-warning"
                title="Editar"
                data-bs-toggle="modal"
                data-bs-target="#modalEditarUsuario"
                data-id="<%= u.id %>"
                data-username="<%= u.username %>"
                data-email="<%= u.email %>"
                data-rol="<%= u.rol %>">
                Editar
              </button>

              <!-- Eliminar -->
              <form action="/usuarios/eliminar/<%= u.id %>" method="POST" class="d-inline-block">
                <button class="btn btn-sm btn-danger" title="Eliminar" onclick="return confirm('¬øEliminar este usuario?')">üóëÔ∏è</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Modal √∫nico para editar usuario -->
  <div class="modal fade" id="modalEditarUsuario" tabindex="-1" aria-labelledby="modalEditarUsuarioLabel" aria-hidden="true">
    <div class="modal-dialog">
      <form class="modal-content" method="POST" id="formEditarUsuario">
        <div class="modal-header bg-warning">
          <h5 class="modal-title" id="modalEditarUsuarioLabel">Editar Usuario</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>

        <div class="modal-body">
          <input type="hidden" name="id" id="edit-id">

          <div class="mb-3">
            <label for="edit-username" class="form-label">Usuario</label>
            <input type="text" class="form-control" name="username" id="edit-username" required>
          </div>

          <div class="mb-3">
            <label for="edit-email" class="form-label">Correo</label>
            <input type="email" class="form-control" name="email" id="edit-email" required>
          </div>

          <div class="mb-3">
            <label for="edit-rol" class="form-label">Rol</label>
            <select class="form-select" name="rol" id="edit-rol" required>
              <option value="Directivo">Directivo</option>
              <option value="Secretaria">Secretaria</option>
            </select>
          </div>

          <div class="mb-3 position-relative">
            <label for="directivo-password" class="form-label">Contrase√±a del Directivo (tuya)</label>
            <input type="password" class="form-control" name="adminPassword" id="directivo-password" required>
            <button type="button" id="toggleBtnAdmin" class="btn btn-outline-secondary btn-sm position-absolute top-0 end-0 mt-4 me-1" onclick="togglePassword('directivo-password','toggleBtnAdmin')">
              üëÅÔ∏è
            </button>
            <div class="form-text">Se validar√° contra la cuenta del directivo actualmente logueado.</div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-warning">Guardar Cambios</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Toggle de contrase√±as (alta y modal) -->
  <script>
    function togglePassword(inputId, btnId) {
      const input = document.getElementById(inputId);
      const btn = document.getElementById(btnId);
      const isPassword = input.type === 'password';
      input.type = isPassword ? 'text' : 'password';
      if (btn) btn.textContent = isPassword ? 'üëÅÔ∏è‚Äçüó®Ô∏è' : 'üëÅÔ∏è';
    }
  </script>

  <!-- Cargar datos en el modal y fijar la action del form -->
  <script>
    const editModal = document.getElementById('modalEditarUsuario');
    editModal.addEventListener('show.bs.modal', function (event) {
      const button = event.relatedTarget;
      const id = button.getAttribute('data-id');
      const username = button.getAttribute('data-username');
      const email = button.getAttribute('data-email');
      const rol = button.getAttribute('data-rol');

      document.getElementById('edit-id').value = id;
      document.getElementById('edit-username').value = username;
      document.getElementById('edit-email').value = email;
      document.getElementById('edit-rol').value = rol;

      const form = document.getElementById('formEditarUsuario');
      form.action = `/usuarios/editar/${id}`;

      // Limpiar el campo de contrase√±a admin al abrir
      const adminPass = document.getElementById('directivo-password');
      adminPass.value = '';
      // Asegurar que est√© en modo password
      adminPass.type = 'password';
      const toggleBtn = document.getElementById('toggleBtnAdmin');
      if (toggleBtn) toggleBtn.textContent = 'üëÅÔ∏è';
    });
  </script>

  <!-- Ocultar autom√°ticamente los mensajes flash -->
  <script>
    setTimeout(() => {
      document.querySelectorAll('.alert').forEach(alert => {
        alert.classList.remove('show');
        alert.classList.add('fade');
        setTimeout(() => alert.remove(), 500);
      });
    }, 4000);
  </script>
</body>
</html>
