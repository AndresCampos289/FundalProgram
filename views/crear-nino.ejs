<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Crear Nuevo Niño</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/formCrearnino.css" rel="stylesheet">
  <link href="/css/navbarStyles.css" rel="stylesheet">
</head>
<body>
  <%- include('navbar') %>

  <div class="container mt-5">
    <h2 class="mb-4">Expediente de Nuevo Niño</h2>

    <% if (success_msg) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= success_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>
    <% if (error_msg) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error_msg %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
      </div>
    <% } %>

    <form action="/crear-nino" method="POST" enctype="multipart/form-data">

      <!-- Sección: Datos del Niño -->
      <div class="card mb-4">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">Datos del Niño</h5>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Código del Niño*</label>
              <input type="text" name="codigo" class="form-control" required>
            </div>
            <div class="col-md-6">
              <label class="form-label">Nombre Completo*</label>
              <input type="text" name="nombre_completo" class="form-control" required>
            </div>
            <div class="col-md-4">
              <label class="form-label">Fecha de Nacimiento</label>
              <input type="date" name="fecha_nacimiento" class="form-control">
            </div>
            <div class="col-md-4">
              <label class="form-label">Edad</label>
              <input type="number" step="0.1" name="edad" class="form-control">
            </div>
            <div class="col-md-4">
              <label class="form-label">Referido por</label>
              <input type="text" name="referido_por" class="form-control">
            </div>
            <div class="col-12">
              <label class="form-label">Diagnóstico</label>
              <textarea name="diagnostico" class="form-control" rows="2"></textarea>
            </div>
          </div>
        </div>
      </div>

      <!-- Sección: Representante Legal -->
      <div class="card mb-4">
        <div class="card-header bg-secondary text-white">
          <h5 class="mb-0">Representante Legal</h5>
        </div>
        <div class="card-body">
          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label">Nombre del Representante</label>
              <input type="text" name="representante_nombre" class="form-control">
            </div>
            <div class="col-md-6">
              <label class="form-label">DPI</label>
              <input type="text" name="representante_dpi" class="form-control">
            </div>
            <div class="col-md-4">
              <label class="form-label">Parentesco</label>
              <input type="text" name="representante_parentesco" class="form-control">
            </div>
            <div class="col-md-4">
              <label class="form-label">Teléfono</label>
              <input type="text" name="representante_telefono" class="form-control">
            </div>
            <div class="col-md-4">
              <label class="form-label">Dirección</label>
              <input type="text" name="representante_direccion" class="form-control">
            </div>
          </div>
        </div>
      </div>

      <!-- Sección: Documentos (con botón para agregar más) -->
      <div class="card mb-4">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Documentos</h5>
          <button type="button" class="btn btn-sm btn-light" id="addDocumento">
            ➕ Agregar documento
          </button>
        </div>
        <div class="card-body" id="documentosContainer">
          <div class="row g-3 documento-group">
            <div class="col-md-6">
              <label class="form-label">Tipo de Documento</label>
              <select name="documento_tipo[]" class="form-select">
                <option value="" selected disabled>Seleccione un tipo</option>
                <option value="certificado de nacimiento">Certificado de nacimiento</option>
                <option value="dpi de padres">DPI de padres</option>
                <option value="ficha de postulacion">Ficha de Postulación</option>
                <option value="informe medico">Informe Médico</option>
                <option value="otros">Otros</option>
              </select>
            </div>
            <div class="col-md-6">
              <label class="form-label">Archivo</label>
              <input type="file" name="documento_archivo[]" class="form-control">
            </div>
          </div>
        </div>
      </div>

      <button type="submit" class="btn btn-success btn-lg w-100 mb-3">
        Guardar Expediente del Niño
      </button>

    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Auto-ocultar flash
    setTimeout(() => {
      document.querySelectorAll('.alert').forEach(a => {
        a.classList.remove('show'); a.classList.add('fade');
        setTimeout(() => a.remove(), 400);
      });
    }, 4000);

    // Script para agregar múltiples documentos
    const addDocumentoBtn = document.getElementById('addDocumento');
    const documentosContainer = document.getElementById('documentosContainer');

    addDocumentoBtn.addEventListener('click', () => {
      const newDocumentoGroup = documentosContainer.querySelector('.documento-group').cloneNode(true);
      newDocumentoGroup.querySelectorAll('input, select').forEach(element => {
        if (element.tagName === 'INPUT' && element.type === 'file') {
          element.value = '';
        } else {
          element.value = element.options ? element.options[0].value : '';
        }
      });
      documentosContainer.appendChild(newDocumentoGroup);
    });
  </script>

</body>
</html>
